<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
<VBox alignment="CENTER">
    <Label text="Nuevo usuario" textAlignment="CENTER" textFill="WHITE">
        <padding>
            <Insets bottom="20.0" />
        </padding>
    <font>
        <Font name="System Bold Italic" size="15.0" />
    </font>
    </Label>
    <TextField fx:id="usernameField" alignment="TOP_LEFT" maxWidth="200.0" prefHeight="25.0" promptText="Nombre y apellido">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <TextField fx:id="usernameField" alignment="TOP_LEFT" maxWidth="200.0" prefHeight="25.0" promptText="DNI">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <TextField fx:id="usernameField" alignment="TOP_LEFT" maxWidth="200.0" prefHeight="25.0" promptText="Correo electronico">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin></TextField>
    <MenuButton text="Tipo de perfil">
        <items>
        <MenuItem text="Administrador" />
        <MenuItem text="Vendedor" />
            <MenuItem text="Repositor" />
        </items>
    </MenuButton>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <children>
        <Button mnemonicParsing="false" text="Agregar">
            <HBox.margin>
                <Insets right="50.0" />
            </HBox.margin>
        </Button>
        <Button contentDisplay="CENTER" mnemonicParsing="false" text="Eliminar" />
        </children>
    </HBox>
    <StackPane.margin>
        <Insets />
    </StackPane.margin>
</VBox>
</StackPane>
