<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainController" stylesheets="@styles.css">

    <!-- Barra de menú en la parte superior -->
    <MenuBar>
        <Menu text="Usuarios" fx:id="adminOption">
            <MenuItem text="Dar de alta" fx:id="menuItemAlta" onAction="#altaUsuarios"/>
            <MenuItem text="Ver usuarios" fx:id="menuItemVer" onAction="#verUsuarios"/>
        </Menu>
        <Menu text="Inventario" fx:id="adminOption">
            <MenuItem text="Control de stock" fx:id="stockProductos"/>
            <MenuItem text="Agregar productos" fx:id="añadirProducto"/>
            <MenuItem text="Eliminar productos" fx:id="eliminarProducto"/>
        </Menu>
        <Menu text="Clientes" fx:id="adminOption">
            <MenuItem text="Agregar" fx:id="agregarClientes"/>
            <MenuItem text="Ver clientes" fx:id="verClientes"/>
        </Menu>
        <Menu text="Ventas" fx:id="adminOption">
            <MenuItem text="Ver ventas" fx:id="verVentas"/>
            <MenuItem text="Guardar" fx:id="menuItemGuardar"/>
            <MenuItem text="Salir" fx:id="menuItemSalir"/>
        </Menu>
        <Menu text="Reportes" fx:id="adminOption"></Menu>
    </MenuBar>
    
    <!-- Espacio para el contenido del formulario u otros elementos -->
    <Pane fx:id="contentPane" prefHeight="400" prefWidth="600">
        <!-- Aquí se puede cargar otro FXML o mostrar contenido dinámico -->
    </Pane>
    
</VBox>
