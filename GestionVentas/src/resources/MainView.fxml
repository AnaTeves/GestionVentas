<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainController" stylesheets="@styles.css">
    <!-- Barra de menú en la parte superior -->
    <MenuBar fx:id="menuBar">
        <Menu text="Usuarios" fx:id="usuariosMenu">
            <MenuItem text="Gestion usuarios" fx:id="menuItemAlta" onAction="#altaUsuarios"/>
        </Menu>
        <Menu text="Inventario" fx:id="inventarioMenu"> 
            <MenuItem text="Gestion inventario" fx:id="menuInventario" onAction="#gestionInventario"/>
        </Menu>
        <Menu text="Clientes" fx:id="clienteMenu"> 
            <MenuItem text="Gestion clientes" fx:id="agregarClientes" onAction="#agregarClientes"/>
        </Menu>
        <Menu text="Ventas" fx:id="ventasMenu">
            <MenuItem text="Registrar venta" fx:id="regVenta" onAction="#registroVenta"/>
            <MenuItem text="Ver ventas" fx:id="verVenta" onAction="#verVenta"/>
        </Menu> 
        <Menu text="Reportes" fx:id="reportesMenu"></Menu> 
    </MenuBar>
    
    <!-- Espacio para el contenido del formulario u otros elementos -->
    <Pane fx:id="contentPane" prefHeight="400" prefWidth="600">
        <!-- Aquí se puede cargar otro FXML o mostrar contenido dinámico -->
    </Pane>
    
</VBox>
