<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="UserController" spacing="10" padding="10">
    <TextField fx:id="dniField" promptText="DNI" />
    <TextField fx:id="nombreField" promptText="Nombre" />
    <ComboBox fx:id="perfilComboBox" promptText="Seleccionar Perfil">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="admin" />
                <String fx:value="usuario" />
            </FXCollections>
        </items>
    </ComboBox>
    <Button text="Agregar Usuario" onAction="#handleAgregarUsuario" />
</VBox>
