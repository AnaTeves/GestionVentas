<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.LoginController"
          hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Etiquetas -->
    <Label text="DNI:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="ContraseÃ±a:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <!-- Campos de texto -->
    <TextField fx:id="dniField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Botones -->
    <Button text="Ingresar" onAction="#handleLogin" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Cancelar" onAction="#handleCancel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
