<?xml version="1.0" encoding="UTF-8"?>
<?import app.UsersController?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="264.0" prefWidth="551.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.UsersController">
<VBox alignment="CENTER">
    <Label text="Nuevo usuario" textAlignment="CENTER" textFill="WHITE">
        <padding>
            <Insets bottom="20.0" />
        </padding>
    <font>
        <Font name="System Bold Italic" size="15.0" />
    </font>
    </Label>
    <TextField fx:id="nomYapeField" alignment="TOP_LEFT" maxWidth="200.0" prefHeight="25.0" promptText="Nombre y apellido">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <TextField fx:id="dniField" alignment="TOP_LEFT" maxWidth="200.0" prefHeight="25.0" promptText="DNI">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <TextField fx:id="emailField" alignment="TOP_LEFT" maxWidth="200.0" prefHeight="25.0" promptText="Correo electronico">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin></TextField>
    <MenuButton fx:id="perfilMenuButton" text="Tipo de perfil">
        <items>
        <MenuItem fx:id="adminMenuIem" text="Administrador" onAction="#initialize" />
        <MenuItem fx:id="vendedorMenuIem" text="Vendedor" onAction="#initialize" />
        <MenuItem fx:id="repositorMenuIem" text="Repositor" onAction="#initialize" />
        </items>
    </MenuButton>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <children>
        <Button mnemonicParsing="false" text="Agregar" onAction="#agregarUsuario">
            <HBox.margin>
                <Insets right="50.0" />
            </HBox.margin>
        </Button>
        <Button contentDisplay="CENTER" mnemonicParsing="false" text="Cancelar" />
        </children>
    </HBox>
    <StackPane.margin>
        <Insets />
    </StackPane.margin>
</VBox>
</StackPane>