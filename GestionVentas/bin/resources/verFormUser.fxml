<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controllers.FormUserController" alignment="CENTER" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints percentWidth="30" />
        <ColumnConstraints percentWidth="70" />
    </columnConstraints>

    <!-- Labels y TextFields -->
    <Label text="Nombre y Apellido:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="DNI:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="DNIField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="correoField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="estadoField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <!-- Botones -->
    <Button text="Guardar" onAction="#handleGuardar" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Button text="Salir" GridPane.rowIndex="4" GridPane.columnIndex="1" />
</GridPane>

